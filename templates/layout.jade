!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=PT+Serif')
  body
    header
      div.inner
        block header
          h1
            a(href=locals.url)= locals.name
          p= locals.description 
          h4 (pardon the dust, i'm still working on the site)
    div#content
      block content
        h2 Welcome to zombocom!
    footer
      div.inner
        block footer
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
